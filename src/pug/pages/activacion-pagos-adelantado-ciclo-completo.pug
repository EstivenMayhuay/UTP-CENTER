  let cardsInfo = [
    {
      id: "card-1",
      title: "Deuda Pendiente",
      text: "¡Hola! 👋 Te saluda 'X' de SAE. Para poder conocer tu deuda pendiente, solo debes marcar al (01) 315-9600 opción 1 - 1"
    },
    {
      id: "card-2",
      title: "Codigo de Alumno",
      text: "¡Hola! 👋 Te saluda 'X' de SAE. Para poder conocer tu código de alumno puedes comunicarte al (01) 315-9600 opción 1 - 2"
    },
    {
      id: "card-3",
      title: "A. Plataformas",
      text: "¡Hola! 👋 Te saluda 'X' de SAE. Si tienes consultas sobre el acceso a tus plataformas UTP, puedes comunicarte al (01) 315-9600 opción 1 - 3"
    },
    {
