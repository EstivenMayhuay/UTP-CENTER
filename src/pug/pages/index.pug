    }
  ];

doctype html
html(lang="es")

  include ../includes/head.pug

    block title
      title UTP CENTER | Atencion al Estudiante

  body.grid
    include ../includes/header.pug

    main.main.grid-main
      section.content-cardsLink
        for cardLink of cardsLink
          .cardLink
            a(href=`${cardLink.link}` target="_blank")= cardLink.text

      section.intro
        h1.title Datos Generales

        for cardInfo in cardsInfo
          .cardCopy(id=`${cardInfo.id}` class=`${cardInfo.class}`)
            .cardCopy__head
              h2= cardInfo.title
              p.iconCopy
                img(src="images/icon-copy.svg", alt="icon copy")
            textarea(readonly="true" class="textCopy")= cardInfo.text

    include ../includes/footer.pug

    script(src="script/app.js") 