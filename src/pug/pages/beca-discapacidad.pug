-
  let cardsInfo = [
    {
      id: "saludo",
      title: "Saludo",
      text: "Hola (nombre del alumno), comentarte que actualmente no es posible postular a la beca por discapacidad debido a que culmino las fechas el dia 6 de agosto. Asimismo puedes verificar toda la informacion ingresando a: bit.ly/Discapacidad-UTP",
      class: "smallCard"
    },
    {
      id: "descripccion",
      title: "Descripccion",
      text: "Beneficio dirigido a alumnos continuos de Pregrado Regular y CGT que presentan alguna discapacidad permanente registrada en CONADIS, el porcentaje de descuento en las cuotas aplica desde el 10% hasta 25% previa evaluaci√≥n.",
      class: "smallCard"
    },
    {
      id: "adicionales",
      title: "Adicionales",
      text: "",
      class: "hideCard"
    },
    {
      id: "para-el-asesor",
      title: "Para el Asesor",
      text: "",
      class: "hideCard"
    }
  ];

doctype html
html(lang="es")
  include ../includes/head.pug
    
    block title
      title Beca por Discapacidad | UTP CENTER

  body.grid
    include ../includes/header.pug

    button.iconMenu
      span.icon-top
      span.icon-center
      span.icon-bottom

    include ../includes/navigation.pug

    main.main.grid-main
      section.intro
        h1.title Beca por Discapacidad
        for cardInfo in cardsInfo
          .cardCopy(id=`${cardInfo.id}` class=`${cardInfo.class}`)
            .cardCopy__head
              h2= cardInfo.title
              p.iconCopy
                img(src="images/icon-copy.svg", alt="icon copy")
            textarea(readonly="true" class="textCopy")= cardInfo.text

    include ../includes/footer.pug

    script(src="script/app.js" type="module") 