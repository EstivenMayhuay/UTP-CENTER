-
  let cardsInfo = [
    {
      id: "saludo",
      title: "Saludo",
      text: "Hola (nombre del alumno), comentarte que actualmente no es posible postular a la beca Madre de Dios debido a que culmino las fechas el dia 6 de agosto. Asimismo puedes verificar toda la informacion ingresando a: bit.ly/MadreDeDios-UTP",
      class: "smallCard"
    },
    {
      id: "descripccion",
      title: "Descripccion",
      text: "Beneficio dirigido a alumnos continuos de Pregrado Regular y CGT Nacidos en Madre de Dios. El porcentaje de descuento en las cuotas de estudios es 20%.",
      class: "smallCard"
    },
    {
      id: "adicionales",
      title: "Adicionales",
      text: "",
      class: "hideCard"
    },
    {
      id: "para-el-asesor",
      title: "Para el Asesor",
      text: "",
      class: "hideCard"
    }
  ];

doctype html
html(lang="es")
  include ../includes/head.pug
    
    block title
      title Beca Madre de Dios | UTP CENTER

  body.grid
    include ../includes/header.pug

    main.main.grid-main
      section.intro
        h1.title Beca Madre de Dios
        for cardInfo in cardsInfo
          .cardCopy(id=`${cardInfo.id}` class=`${cardInfo.class}`)
            .cardCopy__head
              h2= cardInfo.title
              p.iconCopy
                img(src="images/icon-copy.svg", alt="icon copy")
            textarea(readonly="true" class="textCopy")= cardInfo.text

    include ../includes/footer.pug

    script(src="script/app.js") 